<html>
<head>
    {% include '/includes/head.html.twig' %}
</head>
<body>
    <div class="jumbotron">
        <h1 class="center">Walkabout Shoes</h1>
    </div>
    {% include '/includes/navbar.html.twig' %}
    <div class="container">
        <h2>Update {{ store.getName }} </h2>

        <form action="/stores/{{ store.getId }}" method="post">
          <input name="_method" type="hidden" value="patch">

          <label for="name">Rename your store:</label>
          <input id="name" name="name" type="text">

          <button class="btn btn-success" type="submit">Update</button>
        </form>
        <form action="/stores/{{ store.getId }}" method="post">
          <input name="_method" type="hidden" value="delete">

          <button class="btn btn-danger" type="submit">Delete this store</button>
        </form>
    </div>
</body>
</html>
